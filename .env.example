# WordPress Database Configuration
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=your_secure_password_here
WORDPRESS_DB_ROOT_PASSWORD=your_secure_root_password_here

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password_here

# Elasticsearch Configuration
ELASTIC_PASSWORD=your_secure_elastic_password_here

# Ports (if you need to change them)
NGINX_PORT=8080
REDIS_PORT=6379
ELASTICSEARCH_PORT=9200

# Memory Limits (adjust based on your server capacity)
DB_MEMORY_LIMIT=1g
REDIS_MEMORY_LIMIT=768m
ELASTICSEARCH_MEMORY_LIMIT=1g
WORDPRESS_MEMORY_LIMIT=512m

# Environment
ENVIRONMENT=production